<div class="image">
  <img src="assets/img/burger.png" alt="burgers">
</div>

<h1>Eat-Da-Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


<h1>Devoured!</h1>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">
  <div class="form-group">
    <input type="text" id="bur" name="name">
  </div>
  <button class="add-burger" type="submit">Add Burger</button>
  <p>Enter a burger you want to eat. Click the Submit" button</p>
</form>